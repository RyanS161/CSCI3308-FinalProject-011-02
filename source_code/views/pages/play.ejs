<%- include ('../partials/head') %>
<%- include ('../partials/menu') %>

<main>
  <div class="container">
    <h1>Settings</h1>
    <form action="/play" method="POST">

      <div class = "container">
      <fieldset class="form-group row">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Difficulty</legend>
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="difficulty" id="gridRadios1" value="easy" checked>
              <label class="form-check-label" for="gridRadios1">
                Easy
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="difficulty" id="gridRadios2" value="medium" checked>
              <label class="form-check-label" for="gridRadios2">
                Medium
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="difficulty" id="gridRadios3" value="hard">
              <label class="form-check-label" for="gridRadios3">
                Hard
              </label>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset class="form-group row">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Mode</legend>
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="playerCount" id="gridRadios1" value="1" checked>
              <label class="form-check-label" for="gridRadios1">
                Single Player
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="playerCount" id="gridRadios2" value="0">
              <label class="form-check-label" for="gridRadios2">
                Multiplayer
              </label>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset class ="form-group col">
        
      </fieldset>
    </div>
      <div class="form-group col">
       <div >Categories</div>
        
            <div class="container">
              <ul class="ks-cboxtags">
                <li><input type="checkbox" id="checkboxOne" name = "categories" value="science"><label for="checkboxOne" >Science</label></li>
                <li><input type="checkbox" id="checkboxTwo" name = "categories" value="films_and_tv" checked><label for="checkboxTwo">Film + TV</label></li>
                <li><input type="checkbox" id="checkboxThree" name = "categories" value="music" checked><label for="checkboxThree" >Music</label></li>
                <li><input type="checkbox" id="checkboxFour" name = "categories" value="history"><label for="checkboxFour" >History</label></li>
                <li><input type="checkbox" id="checkboxFive" name = "categories" value="geography"><label for="checkboxFive" >Geography</label></li>
                <li><input type="checkbox" id="checkboxSix" name = "categories" value="art_and_literature" checked><label for="checkboxSix">Art + Literature</label></li>
                <li><input type="checkbox" id="checkboxSeven" name = "categories" value="sport_and_leisure"><label for="checkboxSeven">Sports</label></li>
                <li><input type="checkbox" id="checkboxEight" name = "categories" value="general_knowledge"><label for="checkboxEight">General Knowledge</label></li>
                <li><input type="checkbox" id="checkboxNine" name = "categories" value="food_and_drink"><label for="checkboxNine">Food</label></li>
              </ul>
            
            </div>

          </div>
        </div>
      </div>
      <div class="form-group col">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Play</button>
        </div>
      </div>
    </form>
  </div>
</main>

<%- include ('../partials/footer') %>